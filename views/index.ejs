<%- include("./layouts/header")%>
    <div class="mt-5">
    <div class="container">
        <div class="row justify-content-center">
           <div class="col-lg-6">
                <div class="mt-5">
                    <h4 class="text-muted">Recently Added</h4>
                <article class="row">
                    <% books.forEach(book=>{ %>
                        <div class="col-md-4 mt-3">
                            <a href="books/<%=book._id %>/view">
                                <img class="card-img h-100" height="150" width="100" src="/images/<%=book.coverImage %>" alt="book"/>
                            </a>
                        </div>
                    <% }) %>
                </article>
              </div>
           </div>
        </div>
    </div>
</div>
<%- include("./layouts/footer")%>
